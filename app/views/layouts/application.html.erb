<!DOCTYPE html>
<html>
<head>
	<title>MakesSenseOverflow</title>
	<%= stylesheet_link_tag    'application', media: 'all' %>
	<%= javascript_include_tag 'application' %>
	<%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				
				<%= link_to "Make Sense OverFlow", root_path, :class => "navbar-brand" %>
			</div>
			<div id="navbar" class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-right">


					<% if current_user %>

					<li><%= link_to "My Dashboard", user_path(current_user.id) %></li>


					<li><%= link_to "Log Out", logout_path %></li>

					<% else %>
					<li><%= link_to "Log In", new_session_path %></li>

					<% end %>		


				</ul>
				<form method="get" action="/search" class="navbar-form navbar-right">
					<input type="text" name="search" class="form-control" placeholder="Search..."> <button class="search"><i class="glyphicon glyphicon-search white"></i></button>
				</form>
			</div><!--/.navbar-collapse -->
		</div>
	</nav>
	<div class="container">
		<%= yield %>
	</div>
</body>
</html>
