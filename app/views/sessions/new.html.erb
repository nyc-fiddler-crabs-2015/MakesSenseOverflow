<%= form_tag sessions_path, :class => "form-signin"  do  %>

  <%= text_field_tag :name, nil, :class => "form-control", :placeholder => "Username" %>

  <%= password_field_tag :password, nil, :class => "form-control", :placeholder => "Password" %>

  <%= submit_tag "Log In",  :class => "btn btn-success center-block" %>
<% end %>
